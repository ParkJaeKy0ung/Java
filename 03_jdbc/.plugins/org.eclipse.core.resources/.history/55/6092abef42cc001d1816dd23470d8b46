package oop.basic.review;

public class NationRe {
	
	// 2. 필드 생성
	// -> 캡슐화
	private String pNo;
	String name;
	char gender;
	String address;
	String phone;
	int age;
	// (인스턴스 변수들. static X)
	
	
	
	// 3. 메서드(기능)
	public void speakKorean() {
		System.out.println("가나다라 한국말 가능");
	}
	
	public void meidcalBenefits() {
		System.out.println("의료 혜택을 받을 수 있다.");
	}
	
	
	// 4. 간접 접근 방법(기능) 작성
	public String getpNo() {
		return this.getpNo();
	}
	
	public void setpNo(String pNo) {
		this.pNo = pNo;
	}
	
	

}
